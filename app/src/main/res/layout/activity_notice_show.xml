<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoticeShowActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/post_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:contentInsetStart="5dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/noticetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notice"
        android:layout_below="@+id/post_toolbar"
        android:textSize="28sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:id="@+id/noticeunderline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/noticetext"
        android:background="@color/cardview_dark_background"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"/>
    <LinearLayout
        android:id="@+id/layoutdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/noticeunderline"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:textSize="26sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bdbwe dohgrieghe iihtgitg pihpih "
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutsubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layoutdate"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject :"
            android:textSize="21sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAccent1"/>
        <TextView
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bdbwe dohgrieghe iihtgitg pihpih "
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginTop="2dp"
            android:layout_marginStart="20dp"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layoutsubject"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details :"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bdbwe dohgrieghe iihtgitg pihpih "
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginTop="2dp"/>


    </LinearLayout>

</RelativeLayout>